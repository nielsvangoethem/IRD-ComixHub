@using ComixHub.Application.Issues.DTOs;

@if (Issue is not null)
{
    <RadzenCard class="rz-my-4 rz-mx-auto" Style="max-width: 244px">
        <RadzenLink Path="@($"comics/issues/{Issue.Id}")">
            <RadzenImage Path="@Issue.ImageUrl" Style="width: 100%" />
            <RadzenText TextStyle="TextStyle.DisplayH5" TextAlign="TextAlign.Center">@Issue.Title</RadzenText>
        </RadzenLink>
    </RadzenCard>
}

@code {
    [Parameter]
    public IssueListItem? Issue { get; set; }
}
