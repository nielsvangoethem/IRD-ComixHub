@page "/comics/issues"
@using ComixHub.Blazor.Data
@using ComixHub.Blazor.Pages.Comics.Issues
@inject IssuesService IssuesService
@inject IJSRuntime JSRuntime

<PageTitle>Issues</PageTitle>

<div class="container">
    <h3>Issues</h3>

    <div class="filters input-group">
        <input class="form-text" @bind="TitleFilter" />
    </div>

    @if (issues == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <section>
            @foreach (var issue in issues)
            {
                <IssueListItemComponent Issue="issue" />
            }
        </section>
    }

    <button @onclick="GoToTop" class="btn btn-light fixed-button">
        <span class="oi oi-arrow-top"></span> GO TO TOP
    </button>
</div>
